= form_for @prototype, html: { class: "container proto-new"} do |f|
  .col-md-8.col-md-offset-2
    %header.row.user-nav.row
      .col-md-12
        = f.text_field :title, placeholder: "Title", class: "proto-new-title", required: true
    .row
      .col-md-12
        .cover-image-upload#main_image_uploader.preview
          = f.fields_for :images do |i|
            %img
            = i.file_field :image, required: true
            = i.hidden_field :status, value: 'main'
      .col-md-12
        %ul.proto-sub-list.list-group
          - 3.times do
            %li.list-group-item.col-md-4
              .image-upload.preview
                = f.fields_for :images do |i|
                  %img
                  = i.file_field :image
                  = i.hidden_field :status, value: 'sub'
    .row.proto-description
      .col-md-12
        = f.text_field :catch_copy, placeholder: "Catch Copy"
      .col-md-12
        = f.text_area :concept, placeholder: "Concept", cols: "30", rows: "4"
      .col-md-12
        %h4 Tag List
        .row
          - 3.times do |n|
            .col-md-3
              = text_field_tag 'prototype[tag_list][]', "", placeholder: "Tag#{n + 1}"
    .row.text-center.proto-btn
      %button.btn.btn-lg.btn-primary.btn-block
        = f.submit "Publish"
