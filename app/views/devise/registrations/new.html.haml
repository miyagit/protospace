.container.user-new
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!
    .col-md-8.col-md-offset-2
      %header.row.user-nav.row
        .col-md-12
          %h2 Register
          .user-name_image.row
            .user-name.col-md-10
              = f.text_field :name, placeholder: 'Name', autofocus: true
            .user-image.col-md-2.js-avatar-uploader
              %button.btn.btn-primary Add image
              = f.file_field :avatar
          .user-email
            = f.email_field :email, placeholder: 'E-Mail'
          .user-password
            = f.password_field :password, placeholder: 'Password', autocomplete: 'off'
        .col-md-12
          %h4 Member of
          .user-user-member.row
            .user-name.col-md-12
              = f.text_field :title, placeholder: 'Member'
          %h4 Profile
          .user-user-profile.row
            .user-name.col-md-12
              = f.text_area :profile, cols: '30', rows: '4', placeholder: 'Profile'
          %h4 Works
          .user-name_image.row
            .user-name.col-md-12
              = f.text_area :job, cols: '30', rows: '4', placeholder: 'Works'
      .row.text-center.user-btn
        = f.submit value: 'Sign up', class: 'btn btn-lg btn-primary btn-block'
