.navbar.navbar-default.navbar-static-top.navbar-fixed-top
  .container
    %button.navbar-toggle(type="button" data-toggle="collapse" data-target=".navbar-responsive-collapse")
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    = link_to image_tag('logo.png',alt: "PROTO TYPE - SHARE THE PROTOTYPE", height: "36px"), '/', class: 'navbar-brand'
    .navbar-collapse.collapse.navbar-responsive-collapse
      %ul.nav.navbar-nav.navbar-right.pull-right.nav-pills
        - if user_signed_in?
          %li.dropdown
            =link_to '#', aria: { expanded: true }, data: { toggle: "dropdown" }, role: "button", class: 'dropdown-toggle' do
              = current_user.name
              %span.caret
            %ul.dropdown-menu{ role: 'menu'}
              %li
                = link_to 'My page', user_path(current_user)
              %li
                = link_to 'Profile edit', edit_user_path(current_user)
              %li
                = link_to 'Logout', destroy_user_session_path, method: :delete
          %li
            .navbar-btn
              = link_to 'New Proto', new_prototype_path, class: 'btn btn-primary'
        - else
          %li
          .navbar-btn
            = link_to 'Get Started', new_user_session_path, class: 'btn btn-primary'
